# ---------------------------------------
# production environment variables for nginx and node
# the './shift' bash script 'sources' "shift.overrides"
# and on the production server that file is soft-linked to this file ( `/opt/shift-docs/shift.overrides.production` )
# unlike secrets.example, nothing here is privileged info.
# ---------------------------------------
export NGINX_HTTPS_PORT=443
export NGINX_HTTP_PORT=80
export SHIFT_DOMAIN=shift2bikes.org
export LETSENCRYPT_WEBROOT="/tmp/letsencrypt-auto"
export EVENTIMAGES="/opt/shift-docs/backend/eventimages/"